@page "/"
@namespace TicTacToe.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>tic-tac-toe</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script type="text/javascript">
        window.setup = {
            highlightCharacter: function (characterId) {
                var characters = document.querySelectorAll('button[id^="character-"]');
                for (var i = 0; i < characters.length; i++) {
                    if (characters[i] != null) {
                        if (characters[i].id == ('character-' + characterId)) {
                            characters[i].classList.add('btn-secondary');
                        }
                        else {
                            characters[i].classList.remove('btn-secondary');
                        }
                    }
                }
            }
        };

        window.game = {
            setCellAvatar: function (elementId, characterId) {
                var element = document.getElementById(elementId);
                if (element) {
                    element.src = '/images/characters/' + characterId + '.png'
                }
            },
            resetCellAvatars: function () {
                var elements = document.querySelectorAll('img[id^="ttt-gameboard-cell-"]');
                for (var i = 0; i < elements.length; i++) {
                    elements[i].src = '/images/characters/blank.png'
                }
            }
        };
    </script>
</body>
</html>
